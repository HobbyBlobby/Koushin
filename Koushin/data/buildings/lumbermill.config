[general]
name=Lumbermill
description=The Lumbermill produces (temporary) Stone with Wood.

[tasks]
condition=takeWood->produceShelf
condition=!produceShelf->giveWoodBack

[tasks][takeWood]
recipient=town()
action=decreaseResource(Wood, 20)

[tasks][produceShelf]
recipient=town()
action=increaseResource(Stone, 10)

[tasks][giveWoodBack]
recipient=town()
action=increaseResource(Wood, 20)
